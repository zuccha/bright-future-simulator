{
  "card": {
    "border": {
      "color": { "r": 255, "g": 255, "b": 0, "a": 255 },
      "size": 36
    },
    "size": 1050
  },
  "corner": { "scale": 0.25, "offset": 0 },
  "symbol": { "scale": 0.1, "offset": 16 },
  "prestige": {
    "circleScale": 0.3,
    "symbolScale": 0.2,
    "coords": {
      "": [0.5, 0.5],
      "i": [0.5, 0.2125],
      "I": [0.2125, 0.5],
      "L": [0.25, 0.75],
      "T": [0.75, 0.25],
      "X": [0.25, 0.25]
    }
  },

  "houseLayouts": {
    "": [{ "type": "full", "scale": 1, "x": 0, "y": 0 }],
    "i": [{ "type": "nShape", "scale": 1, "x": 0, "y": 0 }],
    "I": [
      { "type": "lineVertical", "scale": 0.4375, "x": 0, "y": 0 },
      { "type": "lineVertical", "scale": 0.4375, "x": 0.5625, "y": 0 }
    ],
    "L": [
      { "type": "corner", "scale": 1, "x": 0, "y": 0 },
      { "type": "block", "scale": 0.4375, "x": 0.5625, "y": 0 }
    ],
    "T": [
      { "type": "lineHorizontal", "scale": 1, "x": 0, "y": 0 },
      { "type": "block", "scale": 0.4375, "x": 0, "y": 0.5625 },
      { "type": "block", "scale": 0.4375, "x": 0.5625, "y": 0.5625 }
    ],
    "X": [
      { "type": "block", "scale": 0.4375, "x": 0, "y": 0 },
      { "type": "block", "scale": 0.4375, "x": 0.5625, "y": 0 },
      { "type": "block", "scale": 0.4375, "x": 0, "y": 0.5625 },
      { "type": "block", "scale": 0.4375, "x": 0.5625, "y": 0.5625 }
    ]
  },

  "cardsWithoutSymbols": [0],
  "alwaysAddAllCorners": true,

  "imagesDirectory": "./images",
  "images": {
    "background": "background.png",
    "circle": "circle.png",
    "corner": "corner.png",

    "houses": {
      "block": ["house_1.png", "house_2.png", "house_3.png", "house_4.png"],
